<!--pages/roomdetail/roomdetail.wxml-->
<backbar gohref="../record/record" paddingtop="115" margintop="0" imgcolor="back-grey"></backbar>
<view class='body' style='hide:{{screenheight}}rpx'>
  <view class='modal-body'>
    <view class='modal-bottom'>
       <view class='modal-bottom-patr1'>
        <view class='part1-name'>{{roomtypename[selectData.typee]}}{{selectData.roomid}}</view>
        <view class='part1-place'>{{selectData.place}}</view>
       </view>
       <view class='modal-bottom-part2'>
          <view class='part2-view1'>基础设施</view>
          <view class='part2-view1 view2'>可容纳{{selectData.peoplenum}}人</view>
       </view>
       <view class='modal-bottom-part3'>
          <ul>
            <li>
              <view class="part3-icon" wx:if="{{selectData.wifi}}" >
                <image src='../../images/sb01.png'></image>
                WiFi
              </view>
              <view class="part3-icon" wx:if="{{selectData.projector}}">
                <image src='../../images/sb02.png'></image>
                投影
              </view>
              <view class="part3-icon" wx:if="{{selectData.roomcomputer}}">
                <image src='../../images/sb03.png'></image>
                教室机
              </view>
              <view class="part3-icon " wx:if="{{selectData.doorlock}}">
                <image src='../../images/sb04.png'></image>
                门禁锁
              </view>
            </li>
            <li>
              <view class="part3-icon" wx:if="{{selectData.wired}}">
                <image src='../../images/sb05.png'></image>
                有线网络
              </view>
              <view class="part3-icon" wx:if="{{selectData.touchtv}}">
                <image src='../../images/sb06.png' ></image>
                触屏电视
              </view>
              <view class="part3-icon " wx:if="{{selectData.stucomputer}}">
                <image src='../../images/sb07.png'></image>
                学生电脑
              </view>
              <view class="part3-icon" wx:if="{{selectData.actdesks}}" >
                <image src='../../images/sb08.png'></image>
                活动书桌
              </view>
            </li>
            <li>
              <view class="part3-icon" wx:if="{{selectData.aio}}" >
                <image src='../../images/sb09.png'></image>
                一体机
              </view>
              <view class="part3-icon" wx:if="{{selectData.meetingsys}}">
                <image src='../../images/sb10.png' ></image>
                会议系统
              </view>
              <view class="part3-icon" wx:if="{{selectData.aircolo}}">
                <image src='../../images/sb11.png'></image>
                空调
              </view>
              <view class="part3-icon " wx:if="{{selectData.gddesk}}">
                <image src='../../images/sb12.png' ></image>
                固定桌椅
              </view>
            </li>
          </ul>
       </view>
    </view>
  </view>
  <view class='model-detail'>
    <view class='modal-conten1'>
      <view class='model-icon'></view>
      <view class='model-title'>相关信息</view>
    </view>
    <view class='model-input'>
     <view class='model-inputuse data-sure'>
        <text class='detail-title'>日期</text>
        <text class='detail-value'>{{sinfonia[0]}}zz</text>
      </view>
      <view class='model-inputuse time-sure'>
         <text class='detail-title'>时间</text>
         <text class='detail-value'>{{sinfonia[1]}}-{{sinfonia[2]}}dd</text>
      </view>
      <view class='model-inputuse data-sure'>
        <text>用途</text>
        <text class='detail-value'>zzz</text>
      </view>
      <view class='model-inputuse phone time-sure'>
        <text>电话</text>
         <text class='detail-value'>第三方</text>
      </view>
    </view>
    <view class='modal-conten1'>
      <view class='model-icon2'></view>
      <view class='model-title'>审核状态</view>
    </view>
    <view class='model-input model-ispass'>
      <text style='color:{{pass==1?"#EEEE00":""}};'>审核中</text>
      <text style='color:{{pass==2?"#6BB92F":""}};'>已通过</text>
      <text style='color:{{pass==3?"red":""}};'>未通过</text>
    </view>
    <view class='modal-conten1 modal-conten2' wx:if="{{isfinish}}">
      <view class='model-icon3'></view>
      <view class='model-title'>注意事项</view>
    </view>
      <view class='model-content2detail detail3' wx:if="{{isfinish}}">
        <p>请小心使用教室内设备,防止损坏</p>
        <p>在借用日期前可以取消教室预约</p>
      </view>
     <view class='submit-time' bindtap='submitT' wx:if="{{isfinish}}">取消预约</view>
  </view>
</view>

