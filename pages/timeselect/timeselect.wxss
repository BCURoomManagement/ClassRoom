page{
  width: 100%;
  background: linear-gradient(to top  right,#ac4cff 0%, #9666fe 100%);
  padding-top: 130rpx;
}
.bar{
  width: 94.5%;
  margin: 0rpx auto;
}
.barimg{
  width: 100%;
  background-size: 100% 100%;  
  -moz-background-size: 100% 100%;  
  -webkit-background-size: 100% 100%; 
  height: 138rpx;
  /* border: 1rpx solid red; */
}
.left,.right{
  font-size: 36rpx;
  font-family: "Adobe Heiti Std";
  padding-top:10rpx;
  text-align: center;
  letter-spacing: 40rpx;
  float: left;
  width: 50%;
}

.body_text{
  position: relative;
}
.time-select{
  background-color: #FBFBFB;
  width: 100%;
  position: absolute;
  /* border: 1rpx solid red; */
}
